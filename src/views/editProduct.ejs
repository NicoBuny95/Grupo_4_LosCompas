<%- include('./partials/head') %>
<body>
  <%- include('./partials/header') %>
  <main >
    <div class="container-form">
      <h1>Editar producto</h1>
      <form action="/product/editProduct/<%= productoE.products_id %>/?_method=PUT" method="POST" class="registration-form" enctype="multipart/form-data">
        <div class="form-group">
          <input type="text" name="name" placeholder="" value="<%= productoE.products_name; %>">
          <label for="name"> Nombre del producto</label>
        </div>
        <div class="form-select">
          <label for="marca">Marca del producto</label>
          <select name="marca" id="marca"> 
            <option value="0">Seleccione una marca ...</option>       
          <% for( let i = 0; i < marcas.length; i++ ) { %>
            <option value="<%= marcas[i].marks_id %>" <% if (productoE.marks_id == marcas[i].marks_id){%><%="selected"%><%};%>><%= marcas[i].marks_description %></option>
          <% } %>
          </select>
        </div>
        <div class="form-group">          
          <input name="description" placeholder="<%= productoE.products_description; %>" required rows="5" value = "<%= productoE.products_description; %>"></input>
          <label for="description">Descripcion</label>
        </div>
        <div class="form-group">          
          <input type="text" name="price" placeholder="" required value="$<%= productoE.products_price; %>">
          <label for="price">Precio</label>
        </div>
        <label for="category">Categor√≠a</label>
        <div class="form-select">
          <% for( let i = 0; i < categorias.length; i++ ) { %>
            <div>
              <input type="radio" value="<%= categorias[i].categories_id %>" name="category" id="<%= categorias[i].categories_id %>" <% if (productoE.categories_id == categorias[i].categories_id){%><%="checked"%><%};%>> 
              <label for="<%= categorias[i].categories_id %>"><%= categorias[i].categories_description %></label>
            </div>            
          <% } %>
        </div>
        <div class="form-image" placeholder="" required>
          <img src="/img/products/<%= productoE.products_image %>" alt="Imagen del producto <%= productoE.products_name; %>" width="50px">
          <label for="image"> Subir imagen:</label>          
          <input type="file" name="image" id="image" accept=".jpg, .jpeg, .png, .webp">
          
        </div>

        <div class="product-add-actions">
          <button type="submit" class="form-button">Agregar</button>
          <button type="reset" class="form-button">Limpiar</button>
        </div>
      </form>

    </div>

 </main> 

  <%- include('./partials/footer') %>
</body>
</html>