<%- include('./partials/head') %>
<body>
   
    <%- include('./partials/header') %>
    <section id="productos-container">
        <h2>Productos de la categoría <%= category %></h2>
    
    <% if (products.length > 0) { %>
        <% products.forEach(function(product) { %>
       
       <article class="producto">
        <a class="producto-a" href="/product/productDetail/<%= product.products_id %>">
            <img src="/img/products/<%= product.products_image %>" alt="<%= product.products_name %>">
            <div class="producto-nombre-precio-container">
                <p class="producto-nombre"><%= product.products_name %></p>
                <p class="producto-descripcion"><%= product.products_description %></p>
                <p class="producto-precio"> Precio: $ <%= product.products_price %></p>
            </div>
        </a>
    </article>
            <% }); %>
    </section>  
    <% } else { %>
        <p>No hay productos en esta categoría.</p>
    <% } %>
    <%- include('./partials/footer') %>
</body>
</html>