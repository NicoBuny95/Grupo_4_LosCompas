<%- include('./partials/head')%>
<body>
  <%-include('./partials/header'); %>
  <main>
    <div class="image-login-container">
      <img id="logo" src="/img/Login.png" alt="LosCompas Supermarket">
    </div>
    <form action="/user/login" method="POST" id="login-form">
      <div class="login-form-email">
        <label for="email">Email</label>
        <input type="email" name="email" placeholder="Ingresa tu email" required>
      </div>
      <div class="login-form-password">
        <label for="password">Contraseña</label>
        <input type="password" name="password" placeholder="Ingresa tu contraseña" required>
      </div>
      <div class="login-form-checkbox">
        <input type="checkbox" name="remember" id="remember">
        <label for="remember">Recuérdame</label>
    </div>    
      <button class="login-form-submit" type="submit">Iniciar Sesión</button>
      <div class="login-form-register">
        <p>¿No tenés cuenta? </p>
        <a href="/user/register">Registrate</a>
      </div>
    </form>
  </main>
  <%- include('./partials/footer'); %>
  <script src="js/prueba.js"></script>
</body>
</html>