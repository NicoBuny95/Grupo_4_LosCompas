        const errorEmailMessage = document.getElementById('error-email-message');
        const emailnput = document.getElementById('email');
        if (errorEmailMessage) {
            setTimeout(function() {
                errorEmailMessage.style.display = 'none';
                emailnput.style.backgroundColor = 'white';
            }, 5000); // 5000 milisegundos = 5 segundos
        }

        const errorPasswordMessage = document.getElementById('error-password-message');
        const passwordInput = document.getElementById('password');
        if (errorPasswordMessage) {
            setTimeout(function() {
                errorPasswordMessage.style.display = 'none';  
                passwordInput.style.backgroundColor = 'white';
            }, 5000); // 5000 milisegundos = 5 segundos
        }
    };
</script>
