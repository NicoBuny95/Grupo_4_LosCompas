<%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>
   
    <div class="container-form">
            <form action="/user/register" method="POST" class="registration-form" enctype="multipart/form-data"> <!-- Agregamos method="POST" y action="/register" -->
                <h1>Registro de Usuarios</h1>
                <div class="form-group">
                    <i class="fa-solid fa-user"></i> 
                    <input type="text" id="username" name="username" placeholder="" required> <!-- Agregamos el campo username con name="username" -->
                    <label for="username">Nombre de Usuario</label> <!-- Cambiamos el texto del label -->
                </div>
                <div class="form-group">
                    <i class="fa-solid fa-user"></i> 
                    <input type="text" id="firstName" name="firstName" placeholder="" required> <!-- Agregamos el campo firstName con name="firstName" -->
                    <label for="firstName">Nombre</label> <!-- Cambiamos el texto del label -->
                </div>
                <div class="form-group">
                    <i class="fa-solid fa-user"></i> 
                    <input type="text" id="lastName" name="lastName" placeholder="" required> <!-- Agregamos el campo lastName con name="lastName" -->
                    <label for="lastName">Apellido</label> <!-- Cambiamos el texto del label -->
                </div>
                <div class="form-group">
                    <i class="fa-solid fa-envelope"></i> 
                     <input type="email" id="email" name="email" placeholder="" required> <!-- Agregamos el campo email con name="email" -->
                     <label for="email">Correo Electrónico</label> <!-- Cambiamos el texto del label -->
                </div>
                <div class="form-group">
                    <i class="fa-solid fa-key"></i> 
                    <input type="password" id="password" name="password" placeholder="" required> <!-- Agregamos el campo password con name="password" -->
                    <label for="password">Contraseña</label> <!-- Cambiamos el texto del label -->
                </div>
                <div class="form-group">
                    <i class="fa-solid fa-key"></i> 
                    <input type="password" id="confirm-password" name="confirmPassword" placeholder="" required> <!-- Agregamos el campo confirmPassword con name="confirmPassword" -->
                    <label for="confirm-password">Confirmar Contraseña</label> <!-- Cambiamos el texto del label -->
                </div>
                <div class="form-group">
                    <label for="profileImage">Imagen de Perfil</label> <!-- Agregamos un label para el campo de la imagen de perfil -->
                    <input type="file" id="profileImage" name="profileImage" accept=".jpg, .jpeg, .png, .webp"> <!-- Agregamos el campo profileImage con name="profileImage" para la imagen de perfil -->
                </div>
                <button class="form-button"  type="submit">Registrar   
                    <i class="fa-solid fa-thumbs-up"></i>
                </button>
            </form>
        </div>
  
      <%- include('./partials/footer') %>
      <script src="/public/js/registroValidacion.js"></script>
</body>

</html>
